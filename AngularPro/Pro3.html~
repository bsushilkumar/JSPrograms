<!-- Leap Year
I/P -> Year, ensure it is a 4 digit number.
Logic -> Determine if it is a Leap Year.
O/P -> Print the year is a Leap Year or not.     -->


<html>
<head>
<script type="text/javascript">

  function properYear(){       //number validation is required

/*  var regex=/^[0-9]+$/;
    if (x.match(regex))
    {
        alert("Must input numbers");
        return false;
    }  
 */
   var num= parseInt(document.getElementById('txt').value);
   var regex=/^[0-9]+$/;
   console.log(typeof num);
    if(num.length<4 )
        {
       alert("Enter 4 digit number to find leap year");
    }
else if(num.length > 4 && num.match(regex))
      {
         alert("character is not allow here");
     }
        
   }
  
function findYear(){

      var num=document.getElementById('txt').value;
      
   
        

        if(num % 4 == 0)
        {
            if( num % 100 == 0)
            {
                // year is divisible by 400, hence the year is a leap year
                if ( num % 400 == 0)
                   alert("Entered 4 digit number is leap year");
                else
                    alert("Entered 4 digit number is not leap year");
            }
            else
               alert("Entered 4 digit number is leap year");
        }
        else
            alert("Entered 4 digit number is not leap year");

 }


 </script>
</head>

<body>

Enter Year to find leap year <input type="number" id="txt" onblur="properYear()" name="name"><br>

<input type="button" value="Click" onclick="findYear()">

