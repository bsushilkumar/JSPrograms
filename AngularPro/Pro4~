<script type="text/javascript"> 
function myPower(){
    
 
var num=parseInt(document.getElementById("number").value);



  var pow=1;  
  alert(typeof pow);
  for(var i=1;i<=num;i++)
   {   
     for(var j=0;j<i;j++)
       {
 alert("befor loop///////");
      document.write("Power of 2^"+i   +" = " );
       document.write("<br>")
      
       }
   }


}
</script>
</head>
